<!DOCTYPE html>
<html>
  <head>
    <title>PlayedBy.me</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap -->
    <link href="http://netdna.bootstrapcdn.com/bootstrap/3.0.0-rc1/css/bootstrap.min.css" rel="stylesheet">
    <link href="http://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet" />
    <link href="http://fonts.googleapis.com/css?family=Abel|Open+Sans:400,600" rel="stylesheet" />
    <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>

    <script type="text/javascript">
      $(document).ready(function() {
        $("#subscribe").submit(function(event) {
          event.preventDefault();

          if ($("#subscribe").attr('submitted')){
            return;
          }

          $.ajax({
            type: 'post',
            data: $(event.target).serialize(),
            datatype: 'json',
            success: function(data) {
              $('#email-input').val('');
              $('#submit').attr('disabled', true);
              $('#subscribe').attr('submitted', true);

              $("<div class='thanks'>Thanks! We'll update you when we launch!</div>")
                  .hide()
                  .appendTo('#container')
                  .slideDown('fast');
            }
          })
        })
      })
    </script>

    <style>
      html
      {
        background: url("http://unsplash.s3.amazonaws.com/batch%206/blurred_lines.jpeg") no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
      }
      body {
        padding-top: 0px;
        font-size: 16px;
        font-family: "Open Sans",serif;
        background: transparent;
      }

      h1 {
        font-size: 44px;
        font-family: "Abel", Arial, sans-serif;
        font-weight: 400;
      }

      h4 {
        font-size: 14px;
      }

      section#title {
        border-bottom: 1px solid #bbb;
      }

      section#message {
        margin-top: 25px;
      }

      /* Override B3 .panel adding a subtly transparent background */
      .panel {
        background-color: rgba(255, 255, 255, 0.9);
      }

      #message {
        text-align: center;
      }

      .margin-base-vertical {
        margin: 0px 0 10px 0;
      }

      #me {
        font-weight: bold;
      }

      .announcement-bar {
        width: 100%;
        padding: 1px 0;
        background-color: #000;
        color: #EEE;
        text-align: center;
      }

      .container {
        padding-top: 40px;
      }
    </style>
  </head>
  <body>
    <div class="announcement-bar">
      <p>Brought to you by @mrmattnguyen and @basilksiddiqui</p>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-offset-3 panel">
          <section id="title">
            <h1 class="margin-base-vertical">PlayedBy.<strong>me<strong></h1>
          </section>

          <section id="message">
            <h3 class="lead"><strong>Share. Vote. Discover.</strong></h3>
            <p class="lead" id="message">Create playlists with your favorite music. Let your guests do the rest.</p>
          </section>

          <form class="margin-base-vertical" id="subscribe" >
            <p class="input-group">
              <span class="input-group-addon"><span class="icon-envelope"></span></span>
              <input type="text" id="email-input" class="form-control input-large" placeholder="me@example.com" name="email"/>
            </p>

            <p class="help-block text-center"><small>We won't send you spam. Unsubscribe at any time.</small></p>

            <p class="text-center">
              <button type="submit" class="btn btn-success btn-large" id="submit">Keep me posted</button>
            </p>
            </span>
          </form>
        </div> <!-- //main content -->
      </div> <!-- //row -->
    </div> <!-- //container -->

    <script type="text/javascript">
      window.addEventListener("load",function() {
        setTimeout(function(){
          // Scroll straight to main content area
            window.scrollTo(0, 85);
          }, 0);
      });
    </script>
  </body>
</html>
